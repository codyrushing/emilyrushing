<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{{pageTitle}}{{#if pageSubtitle}} : {{pageSubtitle}}{{/if}} :: {{SITE_TITLE}}</title>
        {{#if IS_DEVELOPMENT}}
          <link rel="stylesheet" type="text/css" href="/css/main.css">
        {{else}}
          <link rel="stylesheet" type="text/css" href="/css/main.min.css">
        {{/if}}
        <link rel="author" href="https://plus.google.com/115206000376824805502/" />
        <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"></script>
        <script>
          WebFont.load({
            google: {
              families: ['PT Serif', 'Raleway:400,400i,700,700i']
            }
          });
        </script>
    </head>
    <body class="{{pageName}}">
        {{> header }}
        <main>
          {{{body}}}
        </main>
        {{> footer}}
        {{!-- scripts go here --}}
        {{#if IS_DEVELOPMENT}}
          <script type="application/javascript" src="/js/main.js"></script>
        {{else}}
        <script type="application/javascript" src="/js/main.min.js"></script>
        {{!-- Google Analytics snippet --}}
        <script>
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

          ga('create', 'UA-83356008-1', 'auto');
          ga('send', 'pageview');

        </script>
        {{/if}}
    </body>
</html>
